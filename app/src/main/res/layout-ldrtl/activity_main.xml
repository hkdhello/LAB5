<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="186dp">

        <TextView
            android:id="@+id/textView"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Label"
            android:textStyle="bold"
            android:textSize="55dp"
            android:background="@color/Yello"/>

        <TextView
            android:id="@+id/score1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/score1_label" />

        <EditText
            android:id="@+id/score1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:text="@string/score1_value"
            android:background="@color/UglyBlue"/>

        <Button
            android:id="@+id/+"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/inc_button"
            android:textColor="@color/AcidGreen"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dec_button"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"/>/>

        <TextView
            android:id="@+id/score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/score2_label" />

        <EditText
            android:id="@+id/score2_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:text="@string/score2_value"
            android:background="@color/UglyBlue"/>

        <Button
            android:id="@+id/+_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inc_button"
            android:textAlignment="center"
            android:textColor="@color/AcidGreen"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/-_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dec_button"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/FlowerGirl">

            <RadioButton
                android:id="@+id/inc_by_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/one_radio_button"
                android:textColor="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/inc_by_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/two_radio_button"
                android:textColor="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/inc_by_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/three_radio_button"
                android:textColor="@color/colorAccent"/>

        </RadioGroup>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>